<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logo13_new1"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_simple"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:background="@drawable/button_simple"
        android:alpha="0.65"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_below="@+id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:tag="Simple"/>

    <Button
        android:id="@+id/btn_advanced"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:background="@drawable/button_advanced"
        android:alpha="0.65"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_below="@+id/btn_simple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:tag="Advanced"/>

    <Button
        android:id="@+id/btn_training"
        android:layout_below="@+id/btn_advanced"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:background="@drawable/button_training"
        android:alpha="0.65"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:tag="Training"/>

    <Button
        android:id="@+id/btn_return"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:background="@drawable/button_return"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_below="@+id/btn_training"
        android:alpha="0.65"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
